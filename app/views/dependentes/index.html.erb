<h1>Dependentes</h1>

<table class="table">
  <thead>
    <tr>
      <th class="col-8">Nome</th>
      <th class="col-8">Endereco</th>
      <th class="col-8">Telefone</th>
      <th class="col-8">Documento</th>
      <th class="col-8">Familiar</th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @dependentes.each do |dependente| %>
      <tr scope="row">
        <td><%= dependente.nome %></td>
        <td><%= dependente.endereco %></td>
        <td><%= dependente.telefone %></td>
        <td><%= dependente.documento %></td>
        <td><%= dependente.funcionario&.nome %></td>
        <td><%= link_to 'Show', dependente, class: "btn btn-info btn-xs pull-right" %></td>
        <td><%= link_to 'Edit', edit_dependente_path(dependente), class: "btn btn-warning btn-xs pull-right" %></td>
        <td><%= link_to 'Destroy', dependente, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

